<h2>Series</h2>

<p>
  <%= link_to 'Add series', new_series_path, class: 'btn btn-success' %>
</p>

<% @series.each do |s| %>
  <li>
    <span>
      <%= link_to s do %>
        <%= image_tag s.image.url(:thumb) %>
      <% end %>

      <%= link_to s.title, s %>

      <%= link_to 'View', s, class: 'btn btn-primary' %>
    </span>
  </li>
<% end %>

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @series %>
  </div>
  <%= will_paginate @series, :container => false %>
</div>