  </p>

  <p>
    <%= form.label :date %><br>
    <%= form.datetime_select :date %>
  </p>

  <p>
    <%= form.label :series %><br>
    <%= form.collection_select(:series_id, Series.all, :id, :title) %>
  </p>

  <%= form.file_field :image %>

  <p>
    <%= form.submit %>
  </p>

<% end %>